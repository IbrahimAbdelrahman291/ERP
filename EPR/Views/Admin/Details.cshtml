@model IEnumerable<SellitemViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <style>
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

                border: 1px solid #ddd;
            padding: 8px;
                text-align: left;
            }

                background-color: #f2f2f2;
            }

            .product-table tr:hover {
                background-color: #ddd;
            }

        .add-button {
            background-color: #007b7f;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 20px;
        }

            .add-button:hover {
                background-color: #005f5f;
            }
    </style>
</head>
<body>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Amount</th>
                <th>Billing</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Amount</td>
                    <td>@item.Billing</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>